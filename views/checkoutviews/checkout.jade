extends ../layout

block content
  div.row
    div.col-md-6
      h3 Order Summary
      if cart.items
        table.table.table-striped.table-hover.table-bordered
          thead
            tr
              th(width='100') Item
              th(width='100') Price
              th(width='100') Quantity
              th(width='100') Total
          tbody
            each item, i in cart.items
              tr
                td #{item.title}
                td
                  !=displayPrice(item.price)
                td #{item.quantity}
                td
                  !=displayPrice(item.total)
        div.row
          div.col-md-6
            h4 Total: 
              strong
                !=displayPrice(cart.total)
          div.col-md-6 
    div.col-md-6
      h3 Payment Details
      div.row
        div.col-md-12
          form.form-horizontal#form(action='/checkout', method='POST')
            .form-group
              div.col-md-8
                .input-group
                  .input-group-addon
                    span.glyphicon.glyphicon-user
                  input(type='text', name='name', class='form-control', id='username',value='#{user.name}',readonly)
            .form-group
              div.col-md-8
                .input-group
                  .input-group-addon
                    span.glyphicon.glyphicon-home
                  input(type='text', name='address', class='form-control', id='address',value='#{user.address}',readonly)
            .form-group
              div.col-md-8
                .input-group
                  .input-group-addon
                    span.glyphicon.glyphicon-home
                  input(type='text', name='posttown', class='form-control', id='posttown',value='#{user.posttown}',readonly)  
            .form-group
              div.col-md-8
                .input-group
                  .input-group-addon
                    span.glyphicon.glyphicon-home
                  input(type='text', name='postcode', class='form-control', id='postcode',value='#{user.postcode}',readonly)  
            .form-group
              div.col-md-8
                .input-group
                  .input-group-addon
                    span.glyphicon.glyphicon-envelope
                  input(type='text', name='email', class='form-control', id='email',value='#{user.email}',readonly)
            .form-group
              div.col-md-8
                .input-group
                  .input-group-addon
                    span.glyphicon.glyphicon-credit-card
                  input(type='text', name='number', id='card-num',class='form-control', data-stripe='number', placeholder='Card Number') 
            .form-group
              div.col-md-8
                .input-group
                  .input-group-addon
                    span.glyphicon.glyphicon-credit-card
                  select.form-control(name='exp-month',id='exp-month',data-stripe='exp-month')
                    option(selected,disabled) Month
                    option(value='1') 01
                    option(value='2') 02
                    option(value='3') 03
                    option(value='4') 04
                    option(value='5') 05
                    option(value='6') 06
                    option(value='7') 07
                    option(value='8') 08
                    option(value='9') 09
                    option(value='10') 10
                    option(value='11') 11
                    option(value='12') 12
              div.col-md-8
                .input-group
                  .input-group-addon
                    span.glyphicon.glyphicon-credit-card
                  select.form-control(name='exp-year',id='exp-year',data-stripe='exp-year')
                    option(selected,disabled) Year
                    option(value='22') 22
                    option(value='23') 23
                    option(value='24') 24
                    option(value='25') 25
                    option(value='26') 26
                    option(value='27') 27
                    option(value='28') 28
              div.col-md-8
                .input-group
                  .input-group-addon
                    span.glyphicon.glyphicon-credit-card
                  input(type='text', name='cvc', id='cvc',class='form-control', data-stripe='cvc',placeholder='cvc')          
            button.btn.btn-primary.btn-round(type='submit') Pay Now               
            input(type='hidden', name='amount', value='#{cart.totalInteger}')
          .divmessage
            h4.messagetext Hello from Message