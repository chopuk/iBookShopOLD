<section class="mt-5">
  <div class="container">
    <div class="d-flex flex-column align-items-center justify-content-center vh-100">
      <div class="login py-2 px-5">
        <div class="text-center">
          <h3>Login</h3>
        </div>
        <%- include ('../partials/messages'); %>
        <form id="loginForm" action='/user/login', method='POST'>
          <div class="mt-2">
            <label for="username" class="form-label">Username</label>
            <input type="text" id="username" name="username" class="form-control" autofocus required/>
          </div>
          <div class="mt-2">
            <label for="password class="form-label">Password</label>
            <input type="password" id="password" name="password" class="form-control" required/>
          </div>
          <button type="submit" class="btn btn-success w-100 mt-4">Login</button>
        </form>
        <p class="mb-0 text-center">Not registered?<a href="/user/register" class="text-decoration-none"> Click here</a></p>
      </div>
    </div>
  </div>
</section>
