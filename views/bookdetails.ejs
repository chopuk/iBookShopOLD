<section class="pb-5 pt-0 ps-5 pe-5 bookdetails">
    <div class="container">
      <div class="row text-center g-4">
          <div class="d-flex justify-content-center">

            <div class="card bg-dark text-light">
              <div class="card-body d-flex align-items-center">
                <img
                      src="../../images/<%= book.cover %>"
                      alt=""
                  />
              </div>
            </div>
            
            <div class="card bg-success text-light bookinfo">
              <div class="card-body d-flex flex-column align-items-center">
                <h2 class="card-title mb-3"><%= book.title %></h2>
                <div class="d-flex flex-column align-items-center justify-content-center bookinfo1">
                  <h4>Author: <%= book.author %></h4>
                  <h4>Publisher: <%= book.publisher %></h4>
                  <h4>Price: <%- displayPrice(book.price) %></h4>
                  <br>
                  <p><%= book.description %></p>
                  <p class="card-text mb-3">
                    <% if (book.quantity === 0) { %>
                      <h4>Out Of Stock</h4>
                    <% } else { %>
                      <a href="#" class="btn btn-primary ms-1 btn-sm"><%- buttonText(book.quantity) %></a>
                    <% } %>
                  </p>
                </div>
              </div>

            </div>
          </div>
    </div>
  </div>
</section>
