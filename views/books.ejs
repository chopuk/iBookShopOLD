<section class="filter-buttons">
  <div class = "row mt-0 mb-0 button-group filter-button-group">
    <div class = "col d-flex justify-content-center mb-0">
        <button type = "button" disabled class = "btn btn-primary mx-1 text-dark">Filter:</button>
        <button type = "button" data-filter = "*" class = "btn btn-primary mx-1 text-dark">All</button>
        <button type = "button" data-filter = ".Computer" class = "btn btn-primary mx-1 text-dark">Computer</button>
        <button type = "button" data-filter = ".Television" class = "btn btn-primary mx-1 text-dark">Television</button>
        <button type = "button" data-filter = ".Food" class = "btn btn-primary mx-1 text-dark">Food</button>
        <button type = "button" data-filter = ".Factual" class = "btn btn-primary mx-1 text-dark">Factual</button>
        <button type = "button" data-filter = ".Fiction" class = "btn btn-primary mx-1 text-dark">Fiction</button>
    </div>
  </div>
</section>

<section class="filter-buttons mt-2">
  <div class = "row mt-0 mb-2 button-group sort-by-button-group">
    <div class = "col d-flex justify-content-center">
        <button type = "button" disabled class = "btn btn-primary mx-1 text-dark">Sort:</button>
        <button type = "button" data-sort-value = "title" class = "btn btn-primary mx-1 text-dark">Title</button>
        <button type = "button" data-sort-value = "justprice" class = "btn btn-primary mx-1 text-dark">Price (asc)</button>
        <button type = "button" data-sort-value = "justpricedesc" class = "btn btn-primary mx-1 text-dark">Price (desc)</button>
    </div>
  </div>
</section>

<section class="pb-5 pt-0 ps-5 pe-5">
    <div class="container">
      <div class="row text-center g-4" id="books-list">

        <% for (var book of books) { %>

          <div class="col-xl-3 col-lg-4 col-md-6 book-item <%= book.category %>">
            <div class="card bg-dark text-light">
              <div class="card-body d-flex flex-column align-items-center">
                <h5 class="card-title mb-3 title"><%= book.title %></h5>
                <a href="/book/bookdetails/<%= book._id %>">
                  <img
                        src="../images/<%= book.cover %>"
                        alt=""
                  />
                </a>
              </div>
              <p class="card-text mb-3">
                <div class="d-flex justify-content-around align-items-center">
                  <a href="#" class="btn btn-success me-1 btn-sm"><%- displayPrice(book.price) %></a>
                  <% if (book.quantity === 0) { %>
                    <button type=“button” class="btn btn-primary ms-1 btn-sm out-of-stock disabled">
                      <%- buttonText(book.quantity) %>
                    </button>
                  <% } else { %>
                    <form action='/cart/additem/<%= book._id %>', method='POST' class="m-0 p-0">
                      <input type="hidden" value="{_csrf}" name="_csrf">
                      <input type="submit" class="btn btn-primary ms-1 btn-sm"
                          value="<%- buttonText(book.quantity) %>">
                    </form>
                  <% } %>
                  </div>
              </p>
              <div class="hide">
                <h5 class="justprice"><%= book.price %></h5>
                <h5 class="justpricedesc"><%= book.price %></h5>
              </div>
            </div>
          </div>

        <% } %>

    </div>
  </div>
</section>
