<section class="mt-5">
  <div class="container">
    <div class="d-flex flex-column align-items-center justify-content-center vh-100">
      <div class="login py-2 px-5">
        <div class="text-center">
          <h3>Profile</h3>
        </div>
        <%- include ('../partials/messages'); %>
        <form id="profileForm" action='/user/profile', method='POST'>
          <div class="form-group">
            <label for="username" class="form-label">Username</label>
            <input type="text" id="username" name="username" class="form-control" value="<%= user.username %>" readonly/>
          </div>
          <div class="form-group">
            <label for="password" class="form-label">New Password</label>
            <input type="password" id="password" name="password" class="form-control"/>
          </div>
          <div class="form-group">
            <label for="confirmpassword" class="form-label">Confirm New Password</label>
            <input type="password" id="confirmpassword" name="confirmpassword" class="form-control"/>
          </div>
          <div class="form-group">
            <label for="name class="form-label">Name</label>
            <input type="text" id="name" name="name" class="form-control" value="<%= user.name %>"/>
          </div>
          <div class="form-group">
            <label for="email" class="form-label">Email</label>
            <input type="email" id="email" name="email" class="form-control" value="<%= user.email %>"/>
          </div>
          <div class="form-group">
            <label for="gender" class="form-label">Gender</label>
            <select name="gender" id="gender" class="form-select">
              <% if (user.gender === 'male') { %>
                <option value="male" selected>Male</option>
              <% } else { %>
                <option value="male">Male</option>
              <% } %>
              <% if (user.gender === 'female') { %>
                <option value="female" selected>Female</option>
              <% } else { %>
                <option value="female">Female</option>
              <% } %>
              <% if (user.gender === 'neuter') { %>
                <option value="neuter" selected>Neuter</option>
              <% } else { %>
                <option value="neuter">Neuter</option>
              <% } %>
            </select>
          </div>
          <div class="form-group"> 
            <label for="searchPostcode" class="form-label">Postcode</label>
            <div class="d-flex justify-content-between">
                <input type="text" placeholder="Post Code" id="searchPostcode" class="form-control me-5"/>
                <button type="button" id="btnAddress" class="btn btn-primary" onclick="getAddresses()">Search</button>
            </div>
          </div>
          <div class="form-group addressDiv mt-2">
            <select id="selectaddress" class="form-select" onChange="updateAddress()">
            </select>
          </div>
          <div class="form-group"> 
            <div>
              <input type="text" name="addressline1" id="addressline1" class="form-control mt-2" value="<%= user.addressline1 %>"/>
              <input type="text" name="addressline2" id="addressline2" class="form-control mt-2" value="<%= user.addressline2 %>"/>
              <input type="text" name="addressline3" id="addressline3" class="form-control mt-2" value="<%= user.addressline3 %>"/>
              <input type="text" name="postcode" id="postcode" class="form-control mt-2" value="<%= user.postcode %>"/>
            </div>
          </div>
          <button type="button" class="btn btn-success w-100 mt-4" onclick="validateProfile()">Update</button>
        </form>
        <p class="mb-0 text-center">Details OK?<a href="/book/booklist" class="text-decoration-none"> Go Shop!</a></p>
      </div>
    </div>
  </div>
</section>
