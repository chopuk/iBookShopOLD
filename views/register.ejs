<section class="mt-5">
  <div class="container">
    <div class="d-flex flex-column align-items-center justify-content-center register-box">
      <div class="register-page py-2">
        <div class="text-center">
          <h3 class="form-title">Register</h3>
        </div>
        <form id="register-form" action='/user/register', method='POST'>
          <div class="mt-2"">
            <label for="username" class="form-label">Username</label>
            <input type="text" id="username" name="username" class="form-control" autofocus/>
          </div>
          <div class="mt-2">
            <label for="password" class="form-label">Password</label>
            <input type="password" id="password" name="password" class="form-control"/>
          </div>
          <div class="mt-2"">
            <label for="confirmpassword" class="form-label">Confirm Password</label>
            <input type="password" id="confirmpassword" name="confirmpassword" class="form-control"/>
          </div>
          <div class="mt-2"">
            <label for="name class="form-label">Name</label>
            <input type="text" id="name" name="name" class="form-control"/>
          </div>
          <div class="mt-2"">
            <label for="email" class="form-label">Email</label>
            <input type="email" id="email" name="email" class="form-control"/>
          </div>
          <div class="mt-2"">
            <label for="gender" class="form-label">Gender</label>
            <select name="gender" id="gender" class="form-select">
              <option value="male">Male</option>
              <option value="female">Female</option>
              <option value="neuter">Neuter</option>
            </select>
          </div>
          <div class="mt-2"> 
            <label for="searchPostcode" class="form-label">Postcode</label>
            <div class="d-flex justify-content-between">
                <input type="text" placeholder="Post Code" id="searchPostcode" class="form-control me-5"/>
                <button type="button" id="btnAddress" class="btn btn-primary" onclick="getAddresses()">Search</button>
            </div>
          </div>
          <div class="mt-2" addressDiv mt-2">
            <select id="selectaddress" class="form-select" onChange="updateAddress()">
            </select>
          </div>
          <div class="mt-2" addressDiv"> 
            <div>
              <input type="text" name="addressline1" id="addressline1" class="form-control mt-2"/>
              <input type="text" name="addressline2" id="addressline2" class="form-control mt-2"/>
              <input type="text" name="addressline3" id="addressline3" class="form-control mt-2"/>
              <input type="text" name="postcode" id="postcode" class="form-control mt-2"/>
            </div>
          </div>
          <%- include ('../partials/messages') %>
          <button type="button" class="btn btn-success w-100 mt-4 register-button" onclick="validateRegistration()">Register</button>
        </form>
        <p class="mb-0 text-center">Already registered?<a href="/user/login" class="text-decoration-none"> Log In</a></p>
      </div>
    </div>
  </div>
</section>
<% if(typeof postcodeURL != 'undefined') { %>
  <div id="postcodeURL"><%= postcodeURL %></div>
<% } %>